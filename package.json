{
  "private": true,
  "name": "auto-baha-post",
  "version": "0.3.0",
  "main": "main/electron-src/index.js",
  "productName": "AutoBahaPost",
  "author": {
    "name": "argusherd"
  },
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer & npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder -p never",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json",
    "lint": "next lint renderer electron-src",
    "test": "jest --watch",
    "test:build": "npm run build && playwright test",
    "test:all": "jest --ci & playwright test"
  },
  "dependencies": {
    "@iconify/json": "^2.2.133",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.5",
    "electron-serve": "^1.1.0",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "i18next": "^23.6.0",
    "moment": "^2.29.4",
    "puppeteer": "^21.0.3",
    "puppeteer-in-electron": "^3.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.1",
    "react-i18next": "^13.3.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "toad-scheduler": "^3.0.0",
    "typeorm": "0.3.17"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@iconify/tailwind": "^0.1.3",
    "@jorgebodega/typeorm-factory": "^1.4.0",
    "@playwright/test": "^1.35.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "@types/supertest": "^2.0.12",
    "autoprefixer": "^10.4.14",
    "electron": "^25.1.1",
    "electron-builder": "^24.4.0",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.6",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-extended": "^4.0.1",
    "next": "latest",
    "postcss": "^8.4.24",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "release-it": "^17.0.1",
    "rimraf": "^3.0.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.2",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.5"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ],
    "extraFiles": [
      ".env.production.example"
    ],
    "icon": "icon.png",
    "win": {
      "target": [
        "msi",
        "nsis",
        "zip",
        "portable"
      ],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "argusherd",
        "repo": "auto-baha-post"
      }
    ]
  }
}
